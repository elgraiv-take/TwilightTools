<UserControl
    x:Class="Elgraiv.TwilightTools.Common.MessageDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Elgraiv.TwilightTools.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Elgraiv.TwilightTools.Common"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:Elgraiv.TwilightTools"
    MinWidth="200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="BoolToVisibilityConverter"
            VisivilityFalse="Visible"
            VisivilityTrue="Collapsed" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="1"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="{Binding Path=Message}"
                Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                MinWidth="60"
                Margin="10,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                root:TwilightControl.ContentMargin="8,0"
                root:TwilightControl.CornerRadius="8"
                BorderThickness="1.5"
                Command="{Binding Path=RejectCommand}"
                Content="{Binding Path=RejectText}"
                Visibility="{Binding Path=IsOkOnly, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button
                Grid.Column="1"
                MinWidth="60"
                Margin="10,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                root:TwilightControl.ContentMargin="8,0"
                root:TwilightControl.CornerRadius="8"
                BorderThickness="1.5"
                Command="{Binding Path=AcceptCommand}"
                Content="{Binding Path=AcceptText}" />

        </Grid>

    </Grid>
</UserControl>
